{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--log=verbose", "-j=4"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  },
  "list.source.files.command": "fd",
  "list.source.files.args" :  [ "--type", "f" ]
}
